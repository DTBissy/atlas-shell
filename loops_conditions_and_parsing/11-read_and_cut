#!/usr/bin/env bash
# Displays the content of the file /etc/passwd
# Displays username
# Displays user id 
# Displays Home directory path for the user

file=/etc/passwd
while IFS=: read -r username _ uid _ home _; 
do
echo "Username: $username; $PATH"
echo "User ID: $userid; $PATH"
echo "Home Directory: $home; $PATH"
done < /etc/passwd 
