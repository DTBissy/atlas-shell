#!/usr/bin/env bash
# Displays the content of the file /etc/passwd
# Displays username
# Displays user id 
# Displays Home directory path for the user


while IFS=: read -r username uid home | cut -d: -f1,3,6 /etc/passwd; 
do
echo "Username: $PATH"
echo "User ID: $PATH"
echo "Home Directory: $PATH" 
done
